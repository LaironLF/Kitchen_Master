<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.laironlf.kitchen_master.ui.home.HomeFragment"
        android:label="@string/nav_main_string"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.laironlf.kitchen_master.ui.gallery.GalleryFragment"
        android:label="@string/nav_fridge_string"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_gallery_to_blankFragment"
            app:destination="@id/products" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.laironlf.kitchen_master.ui.slideshow.SlideshowFragment"
        android:label="@string/nav_recipes_string"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/products"
        android:name="com.laironlf.kitchen_master.ui.productList.BlankFragment"
        android:label="Продукты"
        tools:layout="@layout/fragment_blank" />
</navigation>