<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kitchen_Master" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/statusBar</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="pagesBackColor">@color/statusBar</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/windowBack</item>
        <item name="android:navigationBarColor">?attr/pagesBackColor</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
    <attr name="pagesBackColor" format="reference"/>

    <style name="Theme.Kitchen_Master.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplasScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Kitchen_Master.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Kitchen_Master.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>